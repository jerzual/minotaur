{
  "name": "minotaur",
  "version": "1.0.0",
  "description": "an attempt at making a browser FPS with THREE.js",
  "main": "src/scripts/minotaur.js",
  "scripts": {
    "browserify":"browserify src/main.js -o www/main.js -t [ babelify --presets [ es2015 ] ]",
    "serve": "http-server -c 1 -a localhost",
    "dev": "npm-run-all --parallel watchify serve",
    "build": "cross-env NODE_ENV=production browserify -e src/scripts/minotaur.js | uglifyjs -c warnings=false -m > www/js/main.js",
    "html": "jade -o www/ src/index.jade",
    "css": "node-sass -o www/styles/ ./src/styles/index.scss",
    "lint": "eslint --ext .js,.vue src test/unit",
    "test": "karma start karma.conf.js"
  },
  "author": "jibhaine",
  "license": "MIT",
  "repository": "https://github.com/jerzual/minotaur.git",
  "devDependencies": {
    "babel-core": "^6.4.5",
    "babel-plugin-transform-runtime": "^6.7.5",
    "babel-preset-es2015": "^6.3.13",
    "babel-runtime": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "browserify-hmr": "^0.3.1",
    "browserify-shim": "^3.8.7",
    "chai": "^3.5.0",
    "cross-env": "^1.0.7",
    "del": "^2.2.0",
    "eslint": "^2.7.0",
    "eslint-plugin-html": "^1.4.0",
    "glslify": "^5.0.2",
    "gulp": "^3.9.0",
    "gulp-connect": "^2.3.1",
    "gulp-data": "^1.2.0",
    "gulp-jade": "^1.0.0",
    "gulp-jshint": "^2.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^2.1.1",
    "gulp-size": "^2.0.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^1.2.0",
    "gulp-util": "^3.0.4",
    "http-server": "^0.9.0",
    "jade": "^1.9.2",
    "karma": "^0.13.19",
    "karma-browserify": "^5.0.1",
    "karma-chai": "^0.1.0",
    "karma-firefox-launcher": "^0.1.7",
    "karma-mocha": "^0.2.1",
    "karma-mocha-reporter": "^1.1.5",
    "karma-phantomjs-launcher": "^1.0.0",
    "mocha": "^2.4.5",
    "npm-run-all": "^1.7.0",
    "phantomjs-prebuilt": "^2.1.3",
    "uglify-js": "^2.6.2",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "vue-hot-reload-api": "^1.3.2",
    "vueify": "^8.3.9",
    "vueify-insert-css": "^1.0.0",
    "watchify": "^3.7.0"
  },
  "browserify-shim": {
    "three": "global:THREE",
    "rng": "RNG"
  },
  "browserify": {
    "transform": [
      "vueify",
      "browserify-shim",
      "babelify"
    ]
  },
  "dependencies": {
    "dat-gui": "^0.5.0",
    "hammerjs": "^2.0.8",
    "lodash": "^4.1.0",
    "rng-js": "^1.0.1",
    "rot-js": "^0.6.2",
    "three": "^0.73.2",
    "vue": "^1.0.16",
    "vue-router": "^0.7.10",
    "vue-touch": "^1.0.2"
  }
}
